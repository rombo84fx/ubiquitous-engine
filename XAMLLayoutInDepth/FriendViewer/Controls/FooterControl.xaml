<UserControl x:Class="FriendViewer.Controls.FooterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FriendViewer.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Background="Black">
    <StackPanel Orientation="Horizontal" Margin="5">
        <TextBlock Foreground="White">Friends: <Run Text="{Binding Friends.Count,Mode=OneWay}"/></TextBlock>
        <TextBlock Margin="20 0 0 0" Foreground="LightGray" Text="Created by Thomas Claudius Huber, 2015"/>
    </StackPanel>
</UserControl>
<Window x:Class="TheSimpleCanvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheSimpleCanvas"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <local:SimpleCanvas>
        <Button Content="Pluralsight"></Button>
        <Button Content="Xaml @">
            <local:SimpleCanvas.Top>
                <Binding ElementName="sli" Path="Value" />
            </local:SimpleCanvas.Top>
        </Button>
        <Slider local:SimpleCanvas.Top="200"
                Maximum="100" Width="200" x:Name="sli"></Slider>
    </local:SimpleCanvas>
</Window>
